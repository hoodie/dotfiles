[core]
	editor = vim
[color]
	diff   = auto
	status = auto
	branch = auto
	grep   = auto
  ui     = auto
[diff]
	tool = vimdiff
[push]
	default = tracking
[pack]
  threads = 3
[alias]
	unstage = reset HEAD --
  rollback = reset --hard HEAD~1
	last = log -1 HEAD
  st = status
  co = checkout
  ci = commit
  server = daemon --reuseaddr --base-path=. --export-all --verbose --enable=receive-pack
  lg = log --graph --pretty=format:'%Cred%h%Creset -%C(bold yellow)%d%Creset %C() %s %C(reset) ( %C(yellow)%an%Creset %C(green)%cr )' --abbrev-commit --date=relative
	tree = log --graph --full-history --all --color --date=short --pretty=format:\"%Cred%x09%h %Creset%ad%Cblue%d %Creset %s %C(bold)(%an)%Creset\"
[push]
	default = matching
[url "git@github.com:"]
  insteadOf = "github:"
